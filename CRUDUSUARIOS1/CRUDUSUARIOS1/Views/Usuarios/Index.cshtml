@model IEnumerable<CRUDUSUARIOS1.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Clientes</h1>
<br />
<p>
    <a asp-action="Create"class="btn btn-success">Crear un usuario</a>
</p>

<form asp-controller="Usuarios" asp-action="Index">
    <p>
        Buscar:<input type="text" name="buscar" class="form-text" />
        <input type="submit" value="buscar" class="btn btn-sm btn-dark"/>
    </p>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="example">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clave)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clave)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" class="btn btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    new DataTable('#example', {
        layout: {
            topStart: {
                buttons: ['copy', 'csv', 'excel', 'pdf', 'print', 'colvis']
            }
        },
        scrollX:true,
        initComplete: function(json,settings){
            $(".dt-buttons").removeClass("dt-buttons");
            $(".dt-button").addClass("botones");
            $(".dt-button").addClass("botones");
        },
        topStart: {
            buttons: [

                    extends: 'copy',
            text: 'Copiar',
            className: 'botonCopiar'
        },
                {
            extend: 'CSV',
            text: 'exportar CSV',
            className: 'botonCsv'
        },
        {
            extend: 'pdf',
            text: 'exportar Pdf',
            className: 'botonPdf'
        },
        {
            extend: 'print',
            text: 'Imprimir',
            className: 'botonPrint'
        },
        {
            extend: 'colvis',
            text: 'Filtrar',
            className: 'botonColvis'
        }
            ]   
        }
    });
</script>
